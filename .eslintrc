{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["import"],
  "rules": {
    "semi": [2, "never"],
    "no-use-before-define": ["error", { "functions": false }],
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/extensions": 0,
    "linebreak-style": 0
  }
}
